<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="403 - Network Path Not Found">
    <title>403 - Network Path Not Found</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Improved animations */
        .grid-animation .dot {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
            will-change: opacity;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.3; transform: scale(0.95); }
        }

        .glow-container::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 50% 50%, rgba(34, 211, 238, 0.1), transparent 60%);
            animation: rotate 20s linear infinite;
            will-change: transform;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Button hover effect */
        #returnBtn {
            transition: all 0.3s ease;
        }

        #returnBtn:hover {
            transform: scale(1.05);
            box-shadow: 0 20px 25px -5px rgba(34, 211, 238, 0.1), 0 10px 10px -5px rgba(34, 211, 238, 0.04);
        }

        /* Focus styles for accessibility */
        #returnBtn:focus {
            outline: 2px solid #60A5FA;
            outline-offset: 2px;
        }

        /* Reduced motion preference */
        @media (prefers-reduced-motion: reduce) {
            .grid-animation .dot,
            .glow-container::before {
                animation: none;
            }
        }

        .digit:hover{
            color: rgb(255, 196, 196);
            animation: color 5s ease-in-out;
        }
    </style>
</head>
<body class="bg-slate-900 overflow-hidden">
    <main class="glow-container absolute inset-0 flex items-center justify-center min-h-screen">
        <div class="main-content text-center relative z-10 p-4">
            <!-- Static 403 Number -->
            <div class="error-code mb-8" role="banner">
                <h1 class="text-[15rem] md:text-[20rem] font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent leading-none">
                    <span class="digit inline-block">4</span>
                    <span class="digit inline-block">0</span>
                    <span class="digit inline-block">3</span>
                </h1>
                <span class="sr-only">403 Error - Page Not Found</span>
            </div>

            <!-- Text Content -->
            <div class="space-y-6">
                <h2 class="text-3xl md:text-4xl font-semibold text-white">
                    <i class="fas fa-satellite-dish mr-3 text-cyan-400" aria-hidden="true"></i>
                    Connection Lost in Digital Space
                </h2>
                <p class="text-slate-400 text-lg md:text-xl max-w-2xl mx-auto">
                    The network path you're searching for has vanished into the digital void.
                    <br class="hidden md:block">
                    Our monitoring drones are scanning the nebula for traces...
                </p>
                
                <!-- Interactive Button -->
                <a href="/" id="returnBtn" class="inline-block mt-8 px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-xl text-white font-semibold text-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 focus:ring-offset-slate-900">
                    Beam Me Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Animated Grid Background -->
        <div class="absolute inset-0 grid-animation opacity-30 z-0" aria-hidden="true">
            <div class="grid grid-cols-8 md:grid-cols-12 gap-4 h-full w-full">
                <!-- Dots will be generated by JavaScript -->
            </div>
        </div>
    </main>

    <script>
        // Generate dots dynamically
        const gridContainer = document.querySelector('.grid-animation .grid');
        const dotCount = window.innerWidth < 768 ? 64 : 144; // Responsive dot count
        
        for (let i = 0; i < dotCount; i++) {
            const dot = document.createElement('div');
            dot.className = 'dot h-1 w-1 bg-cyan-400 rounded-full';
            gridContainer.appendChild(dot);
        }

        // Simple background dot animation
        gsap.from(".grid-animation .dot", {
            scale: 0,
            stagger: {
                each: 0.02,
                grid: window.innerWidth < 768 ? [8, 8] : [12, 12],
                from: "center"
            },
            duration: 0.6,
            ease: "power4.out"
        });
    </script>
</body>
</html>