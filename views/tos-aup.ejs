    <style>
        :root {
            --primary: #5865F2;
            --primary-dark: #4752C4;
            --surface: #2B2D31;
            --background: #1E1F22;
            --text: #F2F3F5;
            --text-secondary: #B5BAC1;
            --border: #3F4248;
            --radius: 12px;
